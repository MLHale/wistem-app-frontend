<div class = "container">
  <div class = "row">
<form class="form-horizontal" role = "form">
  <div class = "form-group">
  <label for = "AwardTitle" class = "col-lg-2">Title</label>
  <div class = "col-lg-10">
  <input type="text" class = "form-control" placeholder="Enter Title" id = "awardTitle">
</div>
  </div>
  <div class="form-group">
    <label for = "AwardDescription" class = "col-sm-2">Description</label>
    <div class = "col-sm-10">
    <textarea type = "text" class="form-control" placeholder="Enter Description" rows = "10" cols = "50" id = "awardDescription"></textarea>
  </div>
  </div>
  <div class = "form-group">
    <label for = "Award Type" class = "col-sm-2">Award Type</label>
    <div class = "col-sm-10">
      <input type = "text" class="form-control" placeholder="Enter Type" id = "awardType">
    </div>
  </div>
  <div class = "form-group">
  <button {{action "submitButton"}} type="submit" class="btn btn-default">Submit</button>
</div>
</form>
</div>
</div>
