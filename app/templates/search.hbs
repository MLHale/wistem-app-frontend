<div class="jumbo">
  <div>

  {{paper-input class="flex-30" label="Award Title" value=title onChange=(action (mut title))}}
      <br>
       Stem Fields:
      {{#power-select-multiple options=model.stemfields selected=stemfield placeholder="Select some fields..." onchange=(action (mut stemfield)) as |stemfields|}}
        {{stemfields}}
      {{/power-select-multiple}}
      <br>
       Applicants:
      {{#power-select-multiple options=model.applicanttype selected=applicanttype placeholder="Select some applicants..." onchange=(action (mut applicanttype)) as |applicant|}}
        {{applicant}}
      {{/power-select-multiple}}


    {{#bs-accordion as |acc|}}
      {{#acc.item value="1" as |aitem|}}
        {{#aitem.title}}
          <strong style="color:blue;">Advanced Filter</strong>
        {{/aitem.title}}
        {{#aitem.body}}
          {{paper-input class="flex-30" label="Description" value=description onChange=(action (mut description))}}
          {{paper-input class="flex-30" label="Award URL" value=awardurl onChange=(action (mut awardurl))}}
          {{paper-input class="flex-30" label="Sponsor" value=sponsor onChange=(action (mut sponsor))}}

          {{#power-select-multiple options=model.awardsources selected=awardsources placeholder="Sources" onchange=(action (mut awardsources)) as |awardsource|}}
            {{awardsource}}
          {{/power-select-multiple}}
          {{#power-select-multiple options=model.awardpurpose selected=awardpurpose placeholder="Purpose" onchange=(action (mut awardpurpose)) as |purpose|}}
            {{purpose}}
          {{/power-select-multiple}}
        {{/aitem.body}}
      {{/acc.item}}
    {{/bs-accordion}}



<div align="right">
  {{#paper-button raised=true onClick=(action "flatButton" title stemfield applicanttype description awardurl sponsor)}}Search{{/paper-button}}
</div>
  </div>
  <div>
  {{#paper-list}}
    {{#each model.awards as |item|}}
      {{#paper-item onClick=(action "openDialog" item)}}
        {{award-listing item=item}}
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
  </div>
</div>


{{#if showDialog}}
  {{#paper-dialog class="flex-77" onClose=(action "closeDialog" "cancel") origin=dialogOrigin clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>{{selectedAward.title}}</h2>
        <span class="flex"></span>
        {{#paper-button iconButton=true onClick=(action "closeDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-dialog-content}}
      {{award-display selectedAward=selectedAward}}
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button onClick=(action "closeDialog" "ok")}}OK{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
